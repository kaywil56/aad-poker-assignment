rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /games/{gameId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.owner; // Allow document owner to modify
      
      match /players/{playerId} {
        allow read, write: if request.auth != null; // Allow all players to read other players' documents
       // allow create: if request.auth != null; // Allow authenticated user to create a player document
       // allow update: if request.auth.uid == playerId; // Allow a player to write their own document
      }
    }
  }
}
